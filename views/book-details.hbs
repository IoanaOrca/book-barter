<div id="book-detail" class="container">
    <div class="details container">
        <div >
            <h3>Book: {{book.title}} by {{book.author}}</h3>
            <p>Condition: {{book.condition}}</p>
            <p>Genre: {{book.genre}}</p>
            <p>Description: {{book.description}}</p>
            
        </div>
<hr>
        <div >
            <h3>Owner: {{book.owner.username}} </h3>
            
             <h3>Contact: {{book.owner.email}}  </h3>

        </div>

        {{#unless owned}}
        <form method="POST" action="/book/{{book._id}}/reserve" >
            <div class="field submit">
                <button class="reserve"><h3>Reserve</h3></button>
            </div>
        </form>
        {{/unless }}
    </div>
    <div id="map"></div>
</div>
<script>
    window.addEventListener('load', () => {
        main('{{book._id}}');
    });
</script>